@page
@model Hotelone19301408.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.RoomID" class="control-label"></label>
                <select asp-for="Booking.RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckIn" class="control-label"></label>
                <input asp-for="Booking.CheckIn" class="form-control" />
                <span asp-validation-for="Booking.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOut" class="control-label"></label>
                <input asp-for="Booking.CheckOut" class="form-control" />
                <span asp-validation-for="Booking.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if ((string)ViewData["NewBooking"] == "false")
{
    <div>
        <h2>Your Booking could not be Placed</h2>
        <p>this room is not available for the selected dates.</p>
    </div>
}
else if ((string)ViewData["NewBooking"] == "true")
{
<div>
    <h2>Your Booking has been Placed!</h2>
    <p><strong>Room No: </strong>@ViewData["Rm"]</p>
    <p><strong>Beds: </strong>@ViewData["BedC"]</p>
    <p><strong>Nights: </strong>@ViewData["NightCount"]</p>
    <p><strong>Total Cost:</strong> @ViewData["total"]</p>
</div>
}

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
